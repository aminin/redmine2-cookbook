#!/bin/sh
set -e

HOME_PATH=<%= @options[:home_path] %>
APP_PATH=<%= @options[:app_path] %>
TARGET_USER=<%= @options[:target_user] %>
TARGET_RUBY=<%= @options[:target_ruby] %>
TARGET_ENV=<%= @options[:target_env] %>

export rvm_ignore_rvmrc=1

cd $APP_PATH
exec sudo -u $TARGET_USER RAILS_ENV="$TARGET_ENV" $TARGET_RUBY bin/rails s thin -b 127.0.0.1 -p 3000
